<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RAK.Core.UI.Xam.Controls.RequiredLabel.RequiredLabel">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal">
            <Label x:Name="lblText" Text="{Binding LabelText}"></Label>
            <Label TextColor="Red" Text="{Binding RequiredIdentifier}" x:Name="lblRequired"></Label>
        </StackLayout>
    </ContentView.Content>
</ContentView>